<html>
<head>

</head>
<body>
    <div class="content-wrapper">
        <!-- Content -->

        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-3 mb-4">Create New User</h4>

            <div class="card">
                <div class="row">
                    <div class="col-md-12">

                        <div class="card-body">
                            <form asp-action="AddnewMedicine">
                                <div class="row">
                                   @*  <input type="hidden" asp-for="UserId" class="form-control"/> *@
                                    <div class="col-md-4">

                                        Medicine Name
                                        <span class="text-danger">*</span>
                                        <input type="text" asp-for="MedicineName" class="form-control" maxlength="50" />
                                        <span asp-validation-for="MedicineName" class="text-danger"></span>


                                    </div>
                                    <div class="col-md-4">
                                        Medicine Department

                                        <select class="form-control" asp-for="MedicineDepartmentId" asp-items="@(new SelectList(ViewBag.JobeDescription ,"MedicineDepartmentId","DepartmentName"))">
                                            <option value="" selected="selected">plase slect</option>


                                        </select>
                                    </div>
                                </div>
                                    <div class="row">
                                    <div class="col-md-4">

                                        Description
                                        <span class="text-danger">*</span>
                                        <textarea asp-for="Description" class="form-control" ></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>

                                    </div>
                              

                                    </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="submit" class="btn btn-primary" value="Save" />
                                    </div>

                                </div>
                                    </form>
                            </div>
                         </div>
                       </div>
                 </div>
             </div>
         </div>
