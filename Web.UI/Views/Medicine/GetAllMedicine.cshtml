@{
}
@model List<Infrastructure.DTO.MedicineDTO>;
<html>
    <head>
<link href="~/assets/css/stylesheet.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"/>

    </head>
    <body>
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
       <h4 class="fw-bold py-3 mb-4">View All Users</h4>

       
        <div class="row custamadd" style="text-align:right; margin-top:-60px;padding-bottom:10px;">
           <a href="#"> <i class="bi bi-plus-circle"></i>Add New Medicine</a>

        </div>
        
       <div class="card">

        <div class="table-responsive text-nowrap">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>Medicine Name</th>
                        <th>Medicine Department</th>
                        <th>Descrption</th>
                        <th>Action</th>
                        
                      
                    </tr>
                </thead>
                <tbody> 
                     @foreach (Infrastructure.DTO.MedicineDTO item in Model)
                    {

                        <tr>
                            <td><i class="fab fa-angular fa-xl text-danger me-4"></i> <span>@item.MedicineName</span></td>
                            
                            <td>
                               @item.MedicineDepartmentName
                            </td>
                            <td>@item.Description

                            </td>
                            
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                                    <div class="dropdown-menu">
                                      <a class="css-menu" href="#"> <i class="bx bx-edit-alt me-1"></i>Edit</a>
                                        <a class="css-menu" href="#">  <i class="bx bx-trash me-1"></i>Delete</a>
                                    </div>
                                </div>
                            </td>
                           
                        </tr> 
                     }
                 
        </tbody> 
    </table> 
 </div>
  </div>
</div> 
 </div> 
 </body>
 </html>